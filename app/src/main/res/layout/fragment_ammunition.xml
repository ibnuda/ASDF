<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.parametris.iteng.asdf.fragment.AmmunitionFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">
        <LinearLayout
            android:id="@+id/ammunition_text_placement"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:text="@string/ammunition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ammunition_spinner_placement"
            android:layout_below="@id/ammunition_text_placement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Spinner
                android:id="@+id/spinner_ammunition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:longClickable="false"
                android:gravity="center">
            </Spinner>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/health_text_placement"
            android:layout_below="@id/ammunition_spinner_placement"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:paddingTop="30dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:text="@string/health"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/health_spinner_placement"
            android:layout_below="@id/health_text_placement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Spinner
                android:id="@+id/spinner_health"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:longClickable="false"
                android:gravity="center">
            </Spinner>

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>
